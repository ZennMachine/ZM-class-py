#:kivy 1.0.9

<HiLoGame>:
    Label:
        id: menu
        text: root.caption
        font_size: 25   
        top: root.top - 60
        size: self.size
        
    Button:
        id: 'higher'
        text: 'Higher'
        on_press: app.choose_higher()
        font_size: 35
        top: root.top - 360
        size: 200, 60
        center_x: root.width / 2 - 30

    Button:
        text: 'Lower'
        on_press: app.choose_lower()
        font_size: 35
        top: root.top - 360
        size: 200, 60
        center_x: root.width / 2 + 30